@startuml
left to right direction

actor "Гість" as Guest
actor "Клієнт" as Client
actor "Адміністратор" as Admin
actor "Платіжна система" as Payment
actor "Контролер залу" as Controller

rectangle "Система бронювання квитків у кінотеатрі" {

  Guest --> (Перегляд сеансів)
  Guest --> (Реєстрація)

  Client --> (Вхід у систему)
  Client --> (Перегляд сеансів)
  Client --> (Бронювання квитків)
  Client --> (Оплата квитків)
  Client --> (Скасування бронювання)
  Client --> (Отримання електронного квитка)

  Admin --> (Вхід у систему)
  Admin --> (Управління сеансами)
  Admin --> (Керування залами)
  Admin --> (Формування звітів)

  Controller --> (Перевірка квитка)

  Payment --> (Обробка платежу)

  (Бронювання квитків) .> (Вибір місця) : <<include>>
  (Бронювання квитків) .> (Перегляд сеансів) : <<include>>
  (Оплата квитків) .> (Перевірка картки) : <<include>>
  (Оплата квитків) .> (Обробка платежу) : <<include>>
  (Скасування бронювання) .> (Повернення коштів) : <<extend>>
  (Бронювання квитків) .> (Сповіщення про бронювання) : <<extend>>
}
@enduml
